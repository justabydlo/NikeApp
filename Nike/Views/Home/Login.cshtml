@using Nike.Models;
@model User;
@{
    ViewData["Title"] = "Store";
}
<div class="container" style="text-align:center;">
    <div class="row text-center">
        <div class="col-lg-12">
            <img src="~/img/Vector.png" />
            <br />
            <br />
        </div>
        <div class="col-lg-12">
            <h3>ЕДИНЫЙ АККАУНТ ДЛЯ ЛЮБОЙ СРЕДЫ NIKE</h3>
            <br />
            <br />
        </div>
    </div>
    <form class="form" method="post" action="@Url.Action("Login", "Home")">
        <div class="form-group">

            <input type="text" placeholder="Адрес электронной почты" class="input-box" asp-for="username" />
            <span asp-validation-for="username"></span>
        </div>
        <div class="form-group">

            <input type="text" placeholder="Пароль" class="input-box" asp-for="password" />
            <span asp-validation-for="password"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn black-btn" style="width:100%;" />
        </div>
    </form>
</div>
@section Scripts{
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
}